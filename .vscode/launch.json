{
    /*
    Workspace settings override user settings.
    https://code.visualstudio.com/docs/getstarted/settings
    Check to see if needed ports are listening: sudo lsof -i -P -n | grep LISTEN
    */
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Launch 127.0.0.1:8080",
                "type": "chrome",
                "request": "launch",
                "url": "http://127.0.0.1:8080/${relativeFileDirname}/${fileBasename}",
                "webRoot": "${workspaceFolder}/${relativeFileDirname}"
            },
            {
                "name": "Attach 127.0.0.1:8080",
                "type": "chrome",
                "request": "attach",
                "port": 8080,
                "url": "http://127.0.0.1:8080/${relativeFileDirname}/${fileBasename}",
                "webRoot": "${workspaceFolder}/${relativeFileDirname}/"
            },
        ]
      }